require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "rcqrs-rails"
    gem.summary = %Q{Rails 3 plugin to use the RCQRS library }
    gem.email = "ben@slashdotdash.net"
    gem.homepage = "http://github.com/slashdotdash/rcqrs-rails"
    gem.authors = ["Ben Smith"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end